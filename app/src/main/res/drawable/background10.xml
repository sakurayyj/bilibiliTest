<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色 -->
    <solid android:color="#A175EE" />

    <!-- 边框的宽度和颜色颜色 -->
    <stroke
        android:width="1dip"
        android:color="#03DBD9D9" />

    <!-- android:radius 弧形的半径 -->
    <corners
        android:radius="5dp"/>

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="5dp"
        android:top="3dp"
        android:right="5dp"
        android:bottom="3dp"

        />

</shape>