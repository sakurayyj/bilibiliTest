<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/little_tv1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lqbz"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="萌宠观察局"
        app:layout_constraintLeft_toRightOf="@+id/little_tv1"
        app:layout_constraintTop_toTopOf="@+id/little_tv1"
        android:layout_marginLeft="10dp"
        android:textColor="@color/bl_gray"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/little_tv2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lqbz"
        app:layout_constraintTop_toBottomOf="@id/little_tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不正经的知识更新了"
        app:layout_constraintLeft_toRightOf="@+id/little_tv2"
        app:layout_constraintTop_toTopOf="@+id/little_tv2"
        android:layout_marginLeft="10dp"
        android:textColor="@color/bl_gray"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/little_tv3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lqbz"
        app:layout_constraintTop_toBottomOf="@id/little_tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书桌改造计划"
        app:layout_constraintLeft_toRightOf="@+id/little_tv3"
        app:layout_constraintTop_toTopOf="@+id/little_tv3"
        android:layout_marginLeft="10dp"
        android:textColor="@color/bl_gray"
        android:textSize="13sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>